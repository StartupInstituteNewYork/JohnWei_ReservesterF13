<table class = "table table-hover">
	<thead>
		<tr>
			<th>Date</th>
			<th>Time</th>
			<th>Restaurant</th>
			<th>Message</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
	</thead>
	<% @reservations.each do |reservation| %>
		<tbody>
			<tr>
				<td><%= reservation.date.strftime("%b %d, %Y")  %></td>
				<td><%= reservation.time.strftime("%I:%M%P") %></td>
				<td><%= reservation.restaurant.name %></td>
				<td><%= reservation.message %></td>
				<td><%= reservation.email %></td>
				<td><button class = "btn btn-primary">Confirm</button></td>
				<td><button class = "btn btn-danger">Reject</button></td>
			<tr>
		</tbody>
	<% end %>

</table>