<h1>Categories of Places I Like</h1>

<table class = "table table-hover">
  <tr>
    <th>Name</th>
    <th>Number of Places</th>
    <th>Actions</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><span class= "label" ><%= category.name %></span></td>
    <td><%= category.restaurants.count %></td>
    <td>
      <%= link_to 'Show', category %>
      <%= link_to 'Edit', edit_category_path(category) %>
      <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path, class: "btn btn-primary" %>
